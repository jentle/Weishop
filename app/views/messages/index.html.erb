<h1>Listing messages</h1>

<table>
  <thead>
    <tr>
      <th>From user name</th>
      <th>To user name</th>
      <th>Create time</th>
      <th>Msg type</th>
      <th>Content</th>
      <th>Msg</th>
      <th>Media</th>
      <th>Pic url</th>
      <th>Format</th>
      <th>Thumb media</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
		<td><%= message.from_user_name %></td>
        <td><%= message.to_user_name %></td>
        <td><%= message.create_time %></td>
        <td><%= message.msg_type %></td>
        <td><%= message.content %></td>
        <td><%= message.msg_id %></td>
        <td><%= message.media_id %></td>
        <td><%= message.pic_url %></td>
        <td><%= message.format %></td>
        <td><%= message.thumb_media_id %></td>
        <td><%= link_to 'Show', message_path(message) %></td>
        <td><%= link_to 'Edit', edit_message_path(message) %></td>
        <td><%= link_to 'Destroy', message_path(message), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Message', new_message_path %>
